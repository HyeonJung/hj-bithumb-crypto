<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ✅ Spring Boot 프로퍼티 매핑 -->
    <springProperty scope="context" name="springAppName" source="spring.application.name" defaultValue="hj-crypto"/>
    <springProperty scope="context" name="activeProfile" source="spring.profiles.active" defaultValue="local"/>

    <!-- ✅ 로그 경로 및 파일명 -->
    <property name="LOG_PATH" value="./logs/${springAppName}"/>
    <property name="LOG_FILE" value="${LOG_PATH}/${activeProfile}.log"/>

    <!-- ✅ 로그 출력 포맷 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %cyan(%logger{36}) - %msg%n"/>
    <property name="COLOR_PATTERN" value="%highlight(%-5level) %magenta(%d{HH:mm:ss.SSS}) [%thread] %green(%logger{36}) - %msg%n"/>

    <!-- ✅ 콘솔 로그 (컬러, 개발 전용) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COLOR_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ✅ 일반 로그 파일 (INFO 이상) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${activeProfile}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ✅ 에러 전용 로그 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${activeProfile}-error.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${activeProfile}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>15</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ✅ 비즈니스 패키지 로그 -->
    <logger name="com.hj.crypto" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- ✅ SQL (MyBatis / Hibernate) 로깅 -->
    <logger name="jdbc.sqlonly" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- ✅ Hibernate, JPA SQL 로그 보기 -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- ✅ 루트 로그 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

</configuration>